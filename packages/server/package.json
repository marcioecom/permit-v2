{
  "name": "@permitdev/server",
  "version": "0.1.0",
  "description": "Server SDK for Permit authentication - JWT validation and middleware",
  "author": "Permit",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./next": {
      "import": {
        "types": "./dist/next/index.d.ts",
        "default": "./dist/next/index.js"
      },
      "require": {
        "types": "./dist/next/index.d.cts",
        "default": "./dist/next/index.cjs"
      }
    },
    "./middleware": {
      "import": {
        "types": "./dist/middleware/express.d.ts",
        "default": "./dist/middleware/express.js"
      },
      "require": {
        "types": "./dist/middleware/express.d.cts",
        "default": "./dist/middleware/express.cjs"
      }
    }
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "dependencies": {
    "jose": "^5.9.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^22.0.0",
    "tsup": "^8.3.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.0"
  },
  "keywords": [
    "permit",
    "authentication",
    "jwt",
    "server",
    "sdk",
    "middleware",
    "express",
    "nextjs"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/marcioecom/permit-v2",
    "directory": "packages/server"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
